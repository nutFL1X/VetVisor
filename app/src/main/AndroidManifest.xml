<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vetvisor">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VetVisor"
        tools:targetApi="31">
        <activity
            android:name=".NFC"
            android:exported="false" />
        <activity
            android:name=".Screen5"
            android:exported="false" />
        <activity
            android:name=".Symptoms"
            android:exported="false" />
        <activity
            android:name=".Profile"
            android:exported="false" />
        <activity
            android:name=".Bull"
            android:exported="false" />
        <activity
            android:name=".Golden"
            android:exported="false" />
        <activity
            android:name=".Shiba"
            android:exported="false"
            android:parentActivityName=".Screen4" />
        <activity
            android:name=".Pug"
            android:exported="false"
            android:parentActivityName=".Screen4" />
        <activity
            android:name=".Screen4"
            android:exported="false"
            android:parentActivityName=".Screen3" />
        <activity
            android:name=".Screen3"
            android:exported="false"
            android:parentActivityName=".Screen2" />
        <activity
            android:name=".Screen2"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- NFC intent filter -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>